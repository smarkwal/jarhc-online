{
  "AWSTemplateFormatVersion": "2010-09-09",
  "Description": "SSL certificate for public website (must be in us-east-1 !!!)",
  "Parameters": {
    "WebsiteDomain": {
      "Description": "Domain name for public website (CloudFront distribution)",
      "Type": "String",
      "Default": "online.jarhc.org"
    },
    "CognitoDomain": {
      "Description": "Domain name of Cognito sign-up and sign-in webpages.",
      "Type": "String",
      "Default": "login.jarhc.org"
    },
    "DnsZoneID": {
      "Description": "ID of hosted DNS zone",
      "Type": "String",
      "Default": "Z39VOOPW73P7H0"
    }
  },
  "Outputs": {
    "WebsiteCertificateARN": {
      "Description": "Website Certificate ARN",
      "Value": {
        "Ref": "WebsiteCertificate"
      }
    },
    "CognitoCertificateARN": {
      "Description": "Cognito Certificate ARN",
      "Value": {
        "Ref": "CognitoCertificate"
      }
    }
  },
  "Resources": {
    "WebsiteCertificate": {
      "Type": "AWS::CertificateManager::Certificate",
      "Properties": {
        "DomainName": {
          "Ref": "WebsiteDomain"
        },
        "ValidationMethod": "DNS",
        "DomainValidationOptions": [
          {
            "DomainName": {
              "Ref": "WebsiteDomain"
            },
            "HostedZoneId": {
              "Ref": "DnsZoneID"
            }
          }
        ]
      },
      "Metadata": {
        "SamResourceId": "WebsiteCertificate"
      }
    },
    "CognitoCertificate": {
      "Type": "AWS::CertificateManager::Certificate",
      "Properties": {
        "DomainName": {
          "Ref": "CognitoDomain"
        },
        "ValidationMethod": "DNS",
        "DomainValidationOptions": [
          {
            "DomainName": {
              "Ref": "CognitoDomain"
            },
            "HostedZoneId": {
              "Ref": "DnsZoneID"
            }
          }
        ]
      },
      "Metadata": {
        "SamResourceId": "CognitoCertificate"
      }
    }
  }
}